      <!-- Code - JQuery String formatting -->
      <p>
        Please enter the unformatted phone number:
      </p>
      <input type="text" id="user_input">
      <button id="myButton">Click to Format</button>
      <p id="phone_text1">
        <b>Formated phone 1:</b>
      </p>
      <p class="margin_small" id=phone1>

      </p>
      <p id="phone_text2">
        <b>Formated phone 2:</b>
      </p>
      <p class="margin_small" id=phone2>

      </p>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
      <script>
      $(document).ready(function(){
        $("#phone_text1").hide();
        $("#phone_text2").hide();
        $("#myButton").click(function(){
          var myVar= $("#user_input").val();
          var phone1 = "(" + myVar.substring(0, 3) + ") " + myVar.substring(3, 6) + "-" + myVar.substring(6, 10)
          var phone2 = myVar.substring(0, 3) + "-" + myVar.substring(3, 6) + "-" + myVar.substring(6, 10)
          $("#phone_text1").show();
          $("#phone_text2").show();
          $("#phone1").html(phone1);
          $("#phone2").html(phone2);
        });
      });
      </script>
