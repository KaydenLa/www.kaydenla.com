      <!-- Extension Getting -->
      <div>
          <!-- input box -->
          <p class = "red">
            <label for="user_input"><b>Write File Name:</b></label>
            <input type="text" id="user_input" name="user_input"
            onkeypress="get_extension_event(event)">
          </p>

          <!-- Button1 -->
          <button type="button"
          onclick="document.getElementById('extension').innerHTML = '<b>Output: </b>' + get_extension(1)">
            Click me to get file extension
          </button>
          <br>

          <!-- Output 1 -->
          <p id="extension"></p>
